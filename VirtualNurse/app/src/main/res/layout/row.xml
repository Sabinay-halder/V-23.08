<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:id="@+id/ReminderDosageTimeLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/notification"
            android:visibility="invisible"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dosage_quantity_layout"
            android:layout_centerInParent="true"
            android:weightSum="5">


            <com.widevision.pillreminder.model.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                android:text="Quantity"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:layout_weight="2.5"
                android:layout_gravity="center_vertical"
                android:textColorHint="@color/black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:paddingRight="5dp"
                android:layout_marginRight="5dp"
                android:gravity="right">
                <com.widevision.pillreminder.model.CustomEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Quantity"
                    android:textSize="@dimen/text_size_small"
                    android:background="@drawable/edittext_focus_selector"
                    android:singleLine="true"
                    android:paddingRight="5dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:id="@+id/drug_dosage_edit"
                    android:numeric="decimal"
                    />
                <com.widevision.pillreminder.model.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:background="@null"
                    android:gravity="right"
                    android:singleLine="true"
                    android:id="@+id/drug_dosage_text" />
            </LinearLayout>
        </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height=".5dp"
            android:background="#F5F5F5" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:id="@+id/reminder_time_layout"
            android:paddingBottom="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/notification"
            android:visibility="invisible"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:weightSum="5">
            <com.widevision.pillreminder.model.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Time"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                />

            <com.widevision.pillreminder.model.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Time"
                android:background="@null"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:gravity="right"
                android:paddingRight="5dp"
                android:layout_marginRight="5dp"
                android:singleLine="true"
                android:id="@+id/add_time_text" />


        </LinearLayout>

        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"></View>
    </LinearLayout>


